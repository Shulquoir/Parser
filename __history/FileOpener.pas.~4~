unit FileOpener;

interface

uses
  Dialogs, Classes, SysUtils, StdCtrls;

  type
  TFileOpener = class
  public
    class function ChooseFile(var filePath: string; const FileExtension: string): Boolean;
    class function OpenDFNFile(var filePath: string): Boolean;
  end;

implementation

class function TFileOpener.ChooseFile(var filePath: string; const FileExtension: string): Boolean;
var
  odOpenDFN: TOpenDialog;

begin
  Result := False;

  odOpenDFN := TOpenDialog.Create(nil);
  try
    odOpenDFN.Filter := FileExtension;
    if odOpenDFN.Execute then
    begin
      filePath := odOpenDFN.FileName;
      ShowMessage('װאיכ DFN בכ גבנאם.');
      Result := True;
    end;
  finally
    odOpenDFN.Free;
  end;
end;

class function TFileOpener.OpenDFNFile(var filePath: string): Boolean;
begin

end;


end.
